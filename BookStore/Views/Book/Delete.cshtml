@model BookStore.Models.Book

<h2 style="font-family: Arial, sans-serif; color: #333;">Delete Book</h2>

<p style="font-family: Arial, sans-serif;">Are you sure you want to delete this book?</p>

<div style="margin-bottom: 15px; font-family: Arial, sans-serif;">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Price:</strong> @Model.Price</p>
</div>

<form asp-action="Delete" method="post" style="margin-bottom: 10px;">
    <input type="hidden" asp-for="Id" />
    <button type="submit" style="background-color: #dc3545; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;">Delete</button>
</form>

<p><a asp-action="Index" style="text-decoration: none; color: #007bff;">Cancel</a></p>
