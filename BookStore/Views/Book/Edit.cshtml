@model BookStore.Models.Book

<h2 style="font-family: Arial, sans-serif; color: #333;">Edit Book</h2>

<form asp-action="Edit" method="post" style="max-width: 400px; font-family: Arial, sans-serif;">
    <input type="hidden" asp-for="Id" />

    <div style="margin-bottom: 10px;">
        <label asp-for="Title" style="display: block; margin-bottom: 5px;">Title:</label>
        <input asp-for="Title" style="width: 100%; padding: 6px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 10px;">
        <label asp-for="Author" style="display: block; margin-bottom: 5px;">Author:</label>
        <input asp-for="Author" style="width: 100%; padding: 6px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <div style="margin-bottom: 10px;">
        <label asp-for="Price" style="display: block; margin-bottom: 5px;">Price:</label>
        <input asp-for="Price" style="width: 100%; padding: 6px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>

    <button type="submit" style="background-color: #28a745; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;">Update</button>
</form>

<p><a asp-action="Index" style="text-decoration: none; color: #007bff;">Back to List</a></p>
